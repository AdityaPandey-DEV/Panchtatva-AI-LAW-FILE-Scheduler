{
  "name": "panchtatva-ai-law-scheduler",
  "version": "1.0.0",
  "description": "AI-powered legal case file scheduler for SIH Hackathon",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd frontend && npm install",
    "deploy": "./deploy.sh",
    "heroku-postbuild": "npm run install-all && npm run build",
    "seed-db": "node create-demo-users.js",
    "test-deploy": "npm run build && npm start"
  },
  "keywords": ["AI", "legal", "scheduler", "hackathon", "SIH"],
  "author": "Team Panchtatva",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.40.0",
    "openai": "^4.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "nodemailer": "^6.9.4",
    "socket.io": "^4.7.2",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}
